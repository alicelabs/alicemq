    {
      "label": "docker-compose: down",
      "type": "shell",
      "command": "docker-compose down",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "rm -rf node_modules client/dist release-builds .webpack_cache coverage",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Full Check",
      "dependsOn": ["npm: lint", "npm: type-check", "npm: test"],
